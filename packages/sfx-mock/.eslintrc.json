{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["google", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "block-spacing": "error",
    "arrow-spacing": "error",
    "keyword-spacing": "error",
    "space-infix-ops": "error",
    "max-len": [
      "warn",
      {
        "code": 120,
        "ignoreStrings": true
      }
    ]
  },
  "ignorePatterns": ["lib"]
}
